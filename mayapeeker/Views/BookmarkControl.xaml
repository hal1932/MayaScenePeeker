<UserControl x:Class="mayapeeker.Views.BookmarkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:behaviors="clr-namespace:mayapeeker.Behaviors"
             xmlns:conv="clr-namespace:mayapeeker.Views.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <conv:PathNameConverter x:Key="name"/>
    </UserControl.Resources>

    <DockPanel Name="_container">
        <Label DockPanel.Dock="Top" Content="フォルダ ブックマーク:"/>

        <ListBox ItemsSource="{Binding Container.ItemList}"
                 SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding DirectoryInfo, Converter={StaticResource name}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <ei:CallMethodAction
                                    TargetObject="{Binding DataContext, ElementName=_container}"
                                    MethodName="SelectItem"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ContentControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="現在の場所を追加">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <behaviors:CallMethodAction SourceObject="{Binding}"
                                                            MethodName="AddCurrent"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>

                    <MenuItem Header="追加">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <behaviors:CallMethodAction SourceObject="{Binding}"
                                                            MethodName="AddItem"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>

                    <MenuItem Header="削除">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <behaviors:CallMethodAction SourceObject="{Binding}"
                                                            MethodName="RemoveItem"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        
    </DockPanel>
</UserControl>
